@model Teknik.Areas.Stream.ViewModels.StreamViewModel

<div class="container">
    @if (Model.Config.StreamConfig.Enabled)
    {
        for (int i = 1; i <= Model.Config.StreamConfig.Sources.Count; i++)
        {
        <div class="row">
            <div class="col-ms-12">
                <div class="thumbnail" width="330" height="250">
                    <img src="@Url.SubRouteUrl("stream", "Stream.View", new { id = i })">
                </div>
            </div>
        </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col-ms-12">Streams are currently disabled.</div>
        </div>
    }
</div>

